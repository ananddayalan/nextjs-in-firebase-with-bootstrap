{
  "name": "nextjs-in-firebase-with-bootstrap",
  "version": "1.0.3",
  "description": "NextJS in Firebase with Bootstrap.",
  "scripts": {
    "install": "yarn build-all",
    "next": "yarn build-firebase && cd app && yarn && yarn dev",
    "preserve": "yarn copy-static && yarn build-all",
    "serve": "firebase serve",
    "predeploy": "yarn copy-static && yarn build-all",
    "deploy": "firebase deploy",
    "build-all": "yarn build-next && yarn build-firebase",
    "build-next": "cd app && yarn && yarn build",
    "build-firebase": "cd functions && yarn",
    "copy-static": "mkdir -p public/static && cp -a \"app/static/\". \"public/static/\""
  },
  "author": "Anand Dayalan <andaya@microsoft.com>",
  "license": "MIT"
}
